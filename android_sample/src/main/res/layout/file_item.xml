<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/file_item_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/file_name"
            android:layout_width="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/actions_layout"
            android:gravity="center_vertical"
            android:layout_height="50dp" />
        <!-- determinate progress once the download starts -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/file_name"
            android:maxHeight="4dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:visibility="gone"
            />
    <FrameLayout
        android:id="@+id/actions_layout"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/download_button"
            app:srcCompat="@drawable/ic_outline_cloud_download_24px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ProgressBar
            android:id="@+id/starting_progress_bar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/open_button"
            app:srcCompat="@drawable/ic_outline_open_in_new_24px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </FrameLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>